class Solution {
    void segregate0and1(int[] arr, int n) {
          int j=0;
          for(int i=0;i<n;i++){
              if(arr[i]==0){
                  arr[j]=0;
                  j++;
              }
          }
          while(j<n){
              arr[j]=1;
              j++;
          }
        
    }

}
